		padding 70px 0
		&__title
			font-size 32px
			line-height 46px
		&__wrap
			flex-direction row
			justify-content space-between
			align-items center
		&--first
			margin-top 80px
	@media (min-width: 992px)
		&__title
			&--sidebar
				margin-top 30px
				margin-bottom 0
				font-size 30px
				line-height 100%
	@media (min-width: 1200px)
		&__title
			font-size 36px
			line-height 50px
			&--sidebar
				font-size 30px
				line-height 100%

/*==============================
	Breadcrumb
==============================*/
.breadcrumb
	display flex
	flex-direction row
	justify-content flex-start
	align-items center
	margin-top 10px
	&__item
		font-size 14px
		line-height 26px
		color rgba($white, .5)
		transition .4s ease
		position relative
		margin-right 40px
		font-family 'Open Sans', sans-serif
		&:before
			content ''
			position absolute
			left 100%
			top 0
			width 40px
			bottom 0
			top 2px
			background url('../img/arrow-right.svg') no-repeat center
			background-size 16px auto
			opacity .5
		&:hover
			color $white
		&--active
			cursor default
			margin-right 0
			&:before
				display none
			&:hover
