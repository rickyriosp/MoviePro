/*==============================
	Content
==============================*/
.content
	padding-bottom 50px
	&__head
		background-color $blue2
		box-shadow 0 5px 25px 0 rgba($black, .3)
		margin-bottom 10px
		position relative
		&:before
			content ''
			position absolute
			top 0
			left 0
			right 0
			height 2px
			display block
			background-image linear-gradient( 90deg, rgb(255,85,165) 0%, rgb(255,88,96) 100%)
			box-shadow 0 0 20px 0 rgba(255, 88, 96, 0.5)
		&--profile
			&:before
				display none
	&__title
		color $white
		font-weight 300
		font-size 30px
		line-height 100%
		margin 25px 0 10px
	&__tabs
		display none
	&__mobile-tabs
		position relative
		&--profile
			margin-bottom -20px
	&__mobile-tabs-btn
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		cursor pointer
		height 50px
		opacity .75
		transition .4s ease
		input
			display block
			position relative
			width auto
			background-color transparent
			border none
			font-size 14px
			color $white
			text-transform uppercase
			cursor pointer
			height 50px
			margin-right 12px
			font-weight 300
		span
			position relative
			width 16px
			height 16px
			display block
			&:before
			&:after
				content ''
				position absolute
				display block
				width 16px
				height 2px
				background-color $white
				left 0
				border-radius 4px
				top 50%
				transition .4s ease
				margin-top -5px
			&:after
				margin-top 2px
				width 10px
		&[aria-expanded="true"]
			opacity 1
			span
				&:before
					transform rotate(45deg)
					margin-top -1px
				&:after
					margin-top -1px
					width 16px
					transform rotate(-45deg)
		&:hover
			opacity 1
	&__mobile-tabs-menu
		top 100%
		left 0
		margin-top -10px
		min-width 180px
		padding 15px 20px
		box-shadow 0 5px 25px 0 rgba($black, .3)
		background-color $blue1
		display block
		transition .4s ease
		position absolute
		z-index 100
		pointer-events none
		opacity 0
		border-radius 4px
		overflow hidden
		&:before
			content ''
			position absolute
			top 0
			left 0
			right 0
			height 2px
			display block
			background-image linear-gradient( 90deg, rgb(255,85,165) 0%, rgb(255,88,96) 100%)
			box-shadow 0 0 20px 0 rgba(255, 88, 96, 0.5)
		a
			display block
			line-height 40px
			font-size 14px
			color rgba($white, .75)
			position relative
			text-transform uppercase
			font-weight 300
			&:hover
				color $clr1
			&.active
				display none
		&.show
			pointer-events auto
			opacity 1
			margin-top 0
	@media (min-width: 576px)
		&__tabs
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			overflow hidden
			li
				margin-right 30px
				&:last-child
					margin-right 0
			a
				display block
				line-height 50px
				color $white
				position relative
				text-transform uppercase
				font-size 14px
				font-weight 300
				color rgba($white, .5)
				&:hover
					color $white
				&:before
					content ''
					position absolute
					bottom 0
					left 0
					right 0
					height 0
					display block
					background-image linear-gradient( 90deg, rgb(255,85,165) 0%, rgb(255,88,96) 100%)
