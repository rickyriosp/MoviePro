$white = #fff
$black = #000
$blue1 = #2b2b31
$blue2 = #28282d
$clr1 = #ff55a5
$clr2 = #ff5860

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Ubuntu:wght@300;400;500;700&display=swap')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Ubuntu', sans-serif
	background-color $blue1
	font-weight normal
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	transition .4s ease
	cursor pointer
	&:focus
		outline none
a
	transition .4s ease
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	appearance none
	box-shadow none
	transition .4s ease
	&:focus
		outline none
ul
	margin 0
	padding 0
	list-style none

::-moz-selection
	background $white
	color $black
	text-shadow none
::selection
	background $white
	color $black
	text-shadow none

::-webkit-input-placeholder
	color rgba($white, .5)
	opacity 1
::-moz-placeholder
	color rgba($white, .5)
	opacity 1
:-moz-placeholder
	color rgba($white, .5)
	opacity 1
:-ms-input-placeholder
	color rgba($white, .5)
	opacity 1

.tab-content > .tab-pane
	display none

.tab-content > .active
	display block

.fade
	transition opacity 0.25s linear

@media screen and (prefers-reduced-motion: reduce)
	.fade
		transition none

.fade:not(.show)
	opacity 0

.collapse:not(.show)
	display none

.collapsing
	position relative
	height 0
	overflow hidden
	transition height .4s ease

@media screen and (prefers-reduced-motion: reduce)
	.collapsing
		transition none

.row--grid
	margin-right -10px
	margin-left -10px
	.col-6
	.col-12
		padding-left 10px
		padding-right 10px
	@media (min-width: 768px)
		margin-right -15px
		margin-left -15px
		.col-6
		.col-12
			padding-left 15px
			padding-right 15px

.b-description_readmore_button
	cursor pointer
	display block
	height 24px
	width 100%
	position relative
	&:before
		content ''
		position absolute
		display flex
		flex-direction row
		justify-content center
		align-items center
		top 0
		left 0
		bottom 0
		right 0
		transition opacity .4s ease
		background url('../img/ellipsis-h.svg') no-repeat center
		background-size auto 22px
		opacity .7
	&:hover
	&.b-description_readmore_button_active
		&:before
			opacity 1

.body
	&:before
		content ''
		position fixed
		display block
		top 0
		left 0
		right 0
		bottom 0
		z-index 99
		background-color rgba($blue1, .75)
		opacity 0
		pointer-events none
		transition .4s ease
	&--active
		&:before
			z-index 99
			opacity 1
			pointer-events auto

/*==============================
	Header
==============================*/
.header
	display block
	position fixed
	top 0
	left 0
	right 0
	background-color $blue1
	z-index 101
	&__logo
		display flex
		justify-content center
		align-items center
		height 70px
		padding 0 15px
		background-color $blue2
		width 110px
		img
			width 100%
			max-width 100px
			display block
		&:hover
			background-color $blue1
	&__nav
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		position fixed
		top 70px
		right 0
		bottom 0
		background-color $blue1
		z-index 99
		width 260px
		padding 30px 30px 0
		transform translate3d(260px, 0, 0)
		transition .4s ease
		&:before
			content ''
			position absolute
			top 0
			left 0
			right 0
			height 2px
			display block
			background-image linear-gradient( 90deg, rgb(255,85,165) 0%, rgb(255,88,96) 100%)
			box-shadow 0 0 20px 0 rgba(255, 88, 96, 0.5)
		&--active
			transform translate3d(0, 0, 0)
	&__nav-link
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		font-size 14px
		font-weight 400
		text-transform uppercase
		color rgba($white, .75)
		svg
			width 16px
			height auto
			fill rgba($white, .75)
			margin-left 2px
			transition fill .4s ease
		&--more
			svg
				width 20px
				margin-left 0
		&:hover
		&[aria-expanded="true"]
			color $clr1
			svg
				fill $clr1
	&__nav-item
		width 100%
		display flex
		flex-direction row
		justify-content flex-start
		align-items flex-start
		margin-bottom 20px
		position relative
		&:last-child
			margin-bottom 0
	&__dropdown
		position relative
		display block
		width 100%
	&__dropdown-menu
		position absolute
		background-color $blue1
		padding 15px 20px
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		width 100%
		min-width 180px
		z-index -1
		pointer-events none
		opacity 0
		box-shadow 0 5px 25px 0 rgba($black, .3)
		transition .4s ease
		margin-top 0
		top 100%
		border-radius 4px
		overflow hidden
		&:before
			content ''
			position absolute
			top 0
			left 0
			right 0
			height 2px
			display block
			background-image linear-gradient( 90deg, rgb(255,85,165) 0%, rgb(255,88,96) 100%)
			box-shadow 0 0 20px 0 rgba(255, 88, 96, 0.5)
		li
			padding 0
		a
			font-size 16px
			color rgba($white, .75)
			line-height 40px
			display block
			font-weight 300
			&:hover
				color $clr1
		&.show
			z-index 1000
			pointer-events auto
			opacity 1
			margin-top 10px
	&__wrap
		position relative
		background-color $blue1
		z-index 2
	&__search
		display block
		position absolute
		bottom 0
		left 0
		right 0
		height 60px
		width 100%
		overflow hidden
		transition bottom .4s ease
		background-color $blue1
		z-index 1
		box-shadow 0 5px 25px 0 rgba($black, .3)
		border-top 1px solid rgba($white, .05)
		&--active
			bottom -60px
	&__search-content
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 60px
		position relative
		input
			position relative
			height 60px
			width 100%
			background-color $blue2
			border none
			padding 0 120px 0 15px
			font-size 15px
			color $white
			font-family 'Open Sans', sans-serif
		button
			position absolute
			height 40px
			width 90px
			top 10px
			right 15px
			border-radius 4px
			background-image linear-gradient( 90deg, rgb(255,85,165) 0%, rgb(255,88,96) 100%)
			box-shadow 0 0 20px 0 rgba($clr2, .5)
			opacity .85
			font-size 12px
			color $white
			text-transform uppercase
			font-weight 500
			letter-spacing .6px
			&:hover
				color $white
				opacity 1
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		height 70px
		position relative
	&__auth
		display flex
		flex-direction row
		justify-content flex-end
		align-items center
		margin-right 44px
	&__search-btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		svg
			fill rgba($white, .75)
			width 22px
			height auto
			transition fill .4s ease
		&:hover
		&.active
			svg
				fill $white
	&__sign-in
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 40px
		width 40px
		border-radius 4px
		background-image linear-gradient( 90deg, rgb(255,85,165) 0%, rgb(255,88,96) 100%)
		box-shadow 0 0 20px 0 rgba($clr2, .5)
		opacity .85
		margin-left 20px
		span
			display none
		svg
			fill $white
			width 22px
			height auto
			transition fill .4s ease
		&:hover
			opacity 1
	&__btn
		display block
		position absolute
		right 0
		top 50%
		margin-top -22px
		width 24px
		height 40px
		opacity .8
		span
			display block
			position absolute
			height 2px
			width 24px
			background $black
			opacity 1
			left 0
			transform rotate(0deg)
			transition .4s ease
			top 13px
			background-color $white
			border-radius 2px
			&:nth-child(2)
				top 21px
			&:nth-child(3)
				top 29px
		&:hover
			opacity 1
		&--active
			opacity 1
			span:nth-child(1)
				top 21px
				transform rotate(45deg)
			span:nth-child(2)
				opacity 0
			span:nth-child(3)
				top 21px
				transform rotate(-45deg)
	&__lang
		position relative
		margin-left 20px
		.header__dropdown-menu
			min-width 122px
			margin-top -10px
			&.show
				margin-top 0
		.header__nav-link
			height 70px
	@media (min-width: 360px)
		&__logo
			width 140px
	@media (min-width: 576px)
		&__logo
			width 157px
		&__sign-in
		&__lang
			margin-left 30px
		&__auth
			margin-right 54px
		&__lang
			.header__dropdown-menu
				min-width 142px
	@media (min-width: 768px)
		&__content
			height 80px
		&__logo
			height 80px
			width 210px
			padding 0
			img
				max-width 120px
		&__auth
			margin-right 54px
		&__sign-in
			height 50px
			width 130px
			margin-left 30px
			svg
				display none
			span
				display block
				font-size 14px
				color $white
				text-transform uppercase
				font-weight 500
				letter-spacing .6px
		&__nav
			top 80px
			width 260px
			transform translate3d(260px, 0, 0)
			&--active
				transform translate3d(0, 0, 0)
		&__search-content
			input
				padding 0 130px 0 20px
			button
				right 20px
		&__lang
			.header__nav-link
				height 80px
	@media (min-width: 1200px)
		&__logo
			width 248px
		&__sign-in
			margin-left 45px
		&__auth
			margin-right 0
		&__btn
			display none
		&__nav
			transform translate3d(0, 0, 0)
			padding 0
			background-color transparent
			width auto
			flex-direction row
			align-items center
			position relative
			top auto
			right auto
			bottom auto
			margin-left 40px
			&:before
				display none
		&__nav-item
			margin 0 40px 0 0
			width auto
			&:last-child
				margin 0
		&__nav-link
			height 80px
		&__content
			justify-content flex-start
		&__auth
			margin-left auto
		&__dropdown-menu
			margin-top -10px
			&.show
				margin-top 0
		&__lang
			margin-left 35px

