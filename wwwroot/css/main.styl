		opacity .85
		font-size 14px
		color $white
		text-transform uppercase
		font-weight 500
		letter-spacing .6px
		margin 50px auto 0
		position relative
		&:hover
			opacity 1
			color $white
	&__wrap
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
	&--dark
		background-color $blue2
	&--first
		margin-top 70px
		.section__title
			margin-bottom 0
		&:before
			content ''
			position absolute
			bottom 0
			left 0
			right 0
			height 2px
			display block
			background-image linear-gradient( 90deg, rgb(255,85,165) 0%, rgb(255,88,96) 100%)
			box-shadow 0 0 20px 0 rgba(255, 88, 96, 0.5)
