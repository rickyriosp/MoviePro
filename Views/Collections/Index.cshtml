@using MovieProMVC.Enums
@using MovieProMVC.Models.Database
@using MovieProMVC.Services.Interfaces
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common

@inject IImageService _imageService;
@model IList<Collection>;

@{
    ViewData["Title"] = "Index";
}

<!-- page title -->
<section class="section section--first section--bg" data-bg="../../img/section/section.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section__wrap">
                    <!-- section title -->
                    <h1 class="section__title">My Collections</h1>
                    <!-- end section title -->
                    <!-- breadcrumb -->
                    <ul class="breadcrumb">
                        <li class="breadcrumb__item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb__item breadcrumb__item--active">Collections</li>
                    </ul>
                    <!-- end breadcrumb -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end page title -->

@foreach (var collection in Model)
{
    <!-- collection name -->
    <div class="content__head">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <!-- content title -->
                    <h2 class="content__title">@collection.Name</h2>
                    <!-- end content title -->
                </div>
            </div>
        </div>
    </div>
    <!-- end collection name -->

    <!-- catalog -->
    <div class="catalog">
        <div class="container">
            <div class="row row--grid">
                @foreach (var movie in collection.MovieCollections)
                {
                    <!-- card -->
                    <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
                        <div class="card">
                            <a asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Movie.Id" asp-route-local="true" class="card__cover">
                                <img src="@_imageService.DecodeImage(movie.Movie.Poster, movie.Movie.PosterType)" alt="Movie Poster">
                                <span class="card__play">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M18.54,9,8.88,3.46a3.42,3.42,0,0,0-5.13,3V17.58A3.42,3.42,0,0,0,7.17,21a3.43,3.43,0,0,0,1.71-.46L18.54,15a3.42,3.42,0,0,0,0-5.92Zm-1,4.19L7.88,18.81a1.44,1.44,0,0,1-1.42,0,1.42,1.42,0,0,1-.71-1.23V6.42a1.42,1.42,0,0,1,.71-1.23A1.51,1.51,0,0,1,7.17,5a1.54,1.54,0,0,1,.71.19l9.66,5.58a1.42,1.42,0,0,1,0,2.46Z" /></svg>
                                </span>
                            </a>
                            <div class="card__content">
                                <h3 class="card__title"><a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Movie.Id" asp-route-local="true">@movie.Movie.Title</a></h3>
                                <span class="card__category">
                                    @foreach (var genre in movie.Movie.Genres)
							        {
								        <a href="#">@genre.GetDescription()</a>
							        }
                                </span>
                                <span class="card__rate">@movie.Movie.VoteAverage</span>
                            </div>
                        </div>
                    </div>
                    <!-- end card -->
                }
            </div>
        </div>
    </div>
    <!-- end catalog -->
}